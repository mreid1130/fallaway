<!-- Single-Game Leaderboards for asteroids/badguys/walls destroyed and total score -->

<div id="leaderboard_container">

	<h1>FallSpace Single Game Leaderboards:</h1>
	<h3>High Score </h3>
	<% @fallspace_ordered_score.each_with_index do |player, i| %>
		<p><%= i+1 %>. <%= player.username%> -- <%= player.high_fallspace_score %></p>
	<% end %>
	<h3>Enemies Killed </h3>
	<% @fallspace_ordered_enemies.each_with_index do |player, i| %>
		<p><%= i+1 %>. <%= player.username%> -- <%= player.high_badguys %></p>
	<% end %>
	<h3>Asteroids Destroyed </h3>
	<% @fallspace_ordered_asteroids.each_with_index do |player, i| %>
		<p><%= i+1 %>. <%= player.username%> -- <%= player.high_asteroids %></p>
	<% end %>
	<h3>Walls Destroyed </h3>
	<% @fallspace_ordered_walls.each_with_index do |player, i| %>
		<p><%= i+1 %>. <%= player.username%> -- <%= player.high_walls %></p>
	<% end %>

	<h1>Footballurrito Single Game Leaderboards:</h1>
	<h3>High Score </h3>
	<% @footballurrito_ordered_score.each_with_index do |player, i| %>
		<p><%= i+1 %>. <%= player.username%> -- <%= player.high_footballurrito_score %></p>
	<% end %>
	<h3>Burritos Eaten </h3>
	<% @footballurrito_ordered_burritos.each_with_index do |player, i| %>
		<p><%= i+1 %>. <%= player.username%> -- <%= player.high_burritos %></p>
	<% end %>
	<h3>Opponents Tackled</h3>
	<% @footballurrito_ordered_opponents.each_with_index do |player, i| %>
		<p><%= i+1 %>. <%= player.username%> -- <%= player.high_opponents %></p>
	<% end %>

</div>
